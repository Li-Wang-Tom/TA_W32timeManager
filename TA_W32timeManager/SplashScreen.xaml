<Window x:Class="TA_W32TimeManager.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        Width="400" Height="300"
        ShowInTaskbar="False" Topmost="True">
    <Grid Background="#FF2B6CB0" Opacity="0.95">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Time Service Manager"
                       FontSize="24" Foreground="White" FontWeight="Bold"
                       HorizontalAlignment="Center" Margin="0,20,0,10"/>
            <ProgressBar IsIndeterminate="True"
                         Width="200" Height="20"
                         Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
